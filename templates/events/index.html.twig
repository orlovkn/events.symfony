{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <section class="scene">
        <div class="grid grid--sidar">
            <div class="grid__item">
                <div class="wysiwyg"><h3>{{ title }}</h3></div>
            </div>
            <div class="grid__item">
                <div class="table" >
                    <div class="table__content">
                        <table>
                            <tbody>
                            {% for item in list %}
                                <tr>
                                    <td scope="row"><a href="{{ path('events_detail', {'id': item.id}) }}">{{ item.name }}</a><br><span class="common-base-color-hint">{{ item.description }}</span></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}