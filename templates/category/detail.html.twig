{% extends 'base.html.twig' %}

{% block title %}{{ category.name }}{% endblock %}

{% block body %}
    <section class="scene">
        <div class="grid grid--sidar">
            <div class="grid__item">
                <div class="wysiwyg"><h3>Category {{ category.name }}</h3></div>
                <p>{{ category.note }}</p>
            </div>
            <div class="grid__item">
                <div class="table" >
                    <div class="table__content">
                        <table>
                            <thead>
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col">Date</th>
                                <th scope="col">Place</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for item in events %}
                            <tr>
                                <td scope="row"><a href="{{ path('events_detail', {'id': item.id}) }}">{{ item.name }}</a></td>
                                <td><a href="#!"></a></td>
                                <td>{{ item.place }}</td>
                            </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}